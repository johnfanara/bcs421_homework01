<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:background="#6d00c1"
        android:text="Homework: Who Wants To Be A Millionaire?"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/gameover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner"
        android:layout_centerInParent="true"
        android:padding="32dp"
        android:text="GAME OVER!"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/earnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameover"
        android:layout_centerInParent="true"
        android:padding="42dp"
        android:text="You earned 0 Credits this game!"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earnings"
        android:layout_centerInParent="true"
        android:padding="32dp"
        android:text="You got 0 out of 0 questions correct!"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/results"
        android:layout_centerInParent="true"
        android:padding="32dp"
        android:text="Please play again!"
        android:textSize="20dp" />

    <Button
        android:id="@+id/replayBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="PLAY AGAIN?" />




</RelativeLayout>